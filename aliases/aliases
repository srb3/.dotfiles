#!/bin/zsh

# cp
alias cp='cp -iv'
alias mv='mv -iv'

# ls
case $(type rm) in
    (*alias*) unalias rm;;
esac
if [ $(command -v "colorls") ]; then
    alias ls='colorls'
else
    alias ls='ls --color=auto'
fi

# grep
alias grep='grep --color=auto'

# Neovim
#alias vi='nvim'
#alias vim='nvim'

# Lynx
alias lynx='lynx -vikeys -accept_all_cookies'

# wget
alias wget="wget --hsts-file $XDG_CACHE_HOME/.wget-hsts"
